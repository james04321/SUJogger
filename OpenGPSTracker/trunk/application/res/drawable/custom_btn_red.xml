<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true" >
        <shape>
            <gradient android:startColor="@color/btn_red_start"
                android:centerColor="@color/btn_red_end"
                android:endColor="@color/btn_red_start"
                android:angle="270"/>
            <corners
                android:radius="3dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>

    <item android:state_focused="true" >
        <shape>
            <gradient
            	android:startColor="@color/btn_red_start"
                android:endColor="@color/btn_red_end"
                android:angle="270" />
            <corners
                android:radius="3dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>

    <item>        
        <shape>
            <!-- <gradient
            	android:startColor="@color/btn_green_start"
                android:endColor="@color/btn_green_end"
                android:angle="270" />-->
            <gradient android:startColor="@color/btn_red_end"
                android:centerColor="@color/btn_red_start"
                android:endColor="@color/btn_red_end"
                android:angle="270"/>
            <corners
                android:radius="3dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
            <!-- <stroke android:width="1dip" android:color="#000000" />-->
        </shape>
    </item>
</selector>